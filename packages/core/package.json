{
  "name": "@varp/core",
  "version": "0.1.0",
  "type": "module",
  "main": "build/index.js",
  "exports": {
    ".": "./build/index.js",
    "./lib": {
      "types": "./lib.d.ts",
      "default": "./build/lib.js"
    }
  },
  "scripts": {
    "build": "bun build src/index.ts src/lib.ts --outdir build --target node --format esm --sourcemap=external --external @modelcontextprotocol/sdk --external fast-xml-parser --external zod",
    "typecheck": "oxlint --type-aware --type-check",
    "test": "bun test",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "format": "oxfmt --write 'src/**/*.ts'",
    "format:check": "oxfmt --check 'src/**/*.ts'",
    "lint:shell": "shellcheck ../plugin/hooks/scripts/*.sh",
    "check": "bun run format:check && bun run lint && bun run lint:shell && bun run build",
    "start": "bun build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "fast-xml-parser": "^4.5.0",
    "zod": "^3.24.0"
  }
}
