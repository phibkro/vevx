{
  "name": "@varp/mcp",
  "version": "0.1.0",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir build --target node --format esm --sourcemap=external --external @modelcontextprotocol/sdk --external zod",
    "typecheck": "oxlint --type-aware --type-check",
    "test": "bun test --concurrent --reporter=junit --reporter-outfile=test-results.xml",
    "test:coverage": "bun test --concurrent --coverage --coverage-reporter=text --coverage-reporter=lcov --coverage-dir=coverage",
    "lint": "oxlint --type-aware",
    "lint:fix": "oxlint --type-aware --fix",
    "format": "oxfmt --write 'src/**/*.ts'",
    "format:check": "oxfmt --check 'src/**/*.ts'",
    "check": "bun run format:check && bun run lint && bun run build",
    "start": "bun build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@varp/core": "workspace:*",
    "zod": "^3.24.0"
  }
}
