{
  "name": "@varp/audit",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --sourcemap=external --external @varp/core && tsc --emitDeclarationOnly",
    "test": "bun test",
    "lint": "oxlint",
    "format": "oxfmt --write 'src/**/*.ts'",
    "format:check": "oxfmt --check 'src/**/*.ts'",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@varp/core": "workspace:*"
  }
}
