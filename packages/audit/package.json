{
  "name": "@varp/audit",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "varp-audit": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/index.ts src/cli.ts --outdir dist --target bun --sourcemap=external --external @varp/core && tsc --emitDeclarationOnly",
    "test": "bun test --concurrent --reporter=junit --reporter-outfile=test-results.xml",
    "test:coverage": "bun test --concurrent --coverage --coverage-reporter=text --coverage-reporter=lcov --coverage-dir=coverage",
    "lint": "oxlint --type-aware --tsconfig tsconfig.check.json --ignore-pattern 'src/cli/github/'",
    "format": "oxfmt --write 'src/**/*.ts'",
    "format:check": "oxfmt --check 'src/**/*.ts'",
    "check": "bun run format:check && bun run lint && bun run build",
    "typecheck": "oxlint --type-aware --type-check --tsconfig tsconfig.check.json --ignore-pattern 'src/cli/github/'",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@varp/core": "workspace:*"
  },
  "devDependencies": {}
}
