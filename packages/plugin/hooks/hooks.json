{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash packages/plugin/hooks/scripts/session-start.sh"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash packages/plugin/hooks/scripts/subagent-context.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash packages/plugin/hooks/scripts/session-stop.sh"
          },
          {
            "type": "prompt",
            "prompt": "If source files were modified during this turn, call varp_lint to check for stale docs, broken links, and missing deps. Fix any issues found."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash packages/plugin/hooks/scripts/freshness-track.sh"
          }
        ]
      }
    ]
  }
}
