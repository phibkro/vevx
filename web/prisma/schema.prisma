generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())

  teamMemberships TeamMember[]
  apiKeys         ApiKey[]
}

model Team {
  id        String   @id @default(cuid())
  name      String
  plan      Plan     @default(FREE)

  stripeCustomerId       String?  @unique
  stripeSubscriptionId   String?  @unique
  stripeProductId        String?
  stripePriceId          String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members TeamMember[]
  audits  Audit[]
  apiKeys ApiKey[]
}

enum Plan {
  FREE
  PRO
  TEAM
  ENTERPRISE
}

model TeamMember {
  id     String @id @default(cuid())
  teamId String
  userId String
  role   Role   @default(MEMBER)

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([teamId, userId])
}

enum Role {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

model Audit {
  id        String   @id @default(cuid())
  teamId    String

  // Audit metadata
  repo      String?
  commit    String?
  branch    String?
  prNumber  Int?

  // Results
  overallScore    Float
  criticalCount   Int
  warningCount    Int
  infoCount       Int

  // Timing
  durationMs Int
  createdAt  DateTime @default(now())

  team     Team      @relation(fields: [teamId], references: [id], onDelete: Cascade)
  findings Finding[]

  @@index([teamId, createdAt])
}

model Finding {
  id       String   @id @default(cuid())
  auditId  String

  agent       String
  severity    Severity
  title       String
  description String   @db.Text
  file        String
  line        Int?
  suggestion  String?  @db.Text

  audit Audit @relation(fields: [auditId], references: [id], onDelete: Cascade)

  @@index([auditId])
}

enum Severity {
  CRITICAL
  WARNING
  INFO
}

model ApiKey {
  id        String   @id @default(cuid())
  teamId    String
  userId    String

  name      String
  keyHash   String   @unique
  lastUsed  DateTime?
  createdAt DateTime @default(now())

  team Team @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([teamId])
}
