{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash hooks/scripts/session-start.sh"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash hooks/scripts/subagent-context.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash hooks/scripts/freshness-track.sh"
          },
          {
            "type": "command",
            "command": "bash hooks/scripts/auto-format.sh"
          }
        ]
      }
    ]
  }
}
