{
  "name": "ai-code-auditor",
  "version": "0.1.0",
  "description": "Multi-agent AI code quality auditor CLI",
  "type": "module",
  "bin": {
    "code-auditor": "./src/cli.ts"
  },
  "scripts": {
    "start": "bun run src/cli.ts",
    "test": "bun test",
    "audit": "bun run src/cli.ts src/",
    "build:darwin-arm64": "bun build src/cli.ts --compile --target=bun-darwin-arm64 --outfile=dist/code-auditor-darwin-arm64",
    "build:darwin-x64": "bun build src/cli.ts --compile --target=bun-darwin-x64 --outfile=dist/code-auditor-darwin-x64",
    "build:linux-x64": "bun build src/cli.ts --compile --target=bun-linux-x64 --outfile=dist/code-auditor-linux-x64",
    "build:linux-arm64": "bun build src/cli.ts --compile --target=bun-linux-arm64 --outfile=dist/code-auditor-linux-arm64",
    "build:all": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-x64 && bun run build:linux-arm64"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "keywords": [
    "code-quality",
    "ai",
    "multi-agent",
    "cli",
    "code-review"
  ],
  "author": "",
  "license": "MIT"
}
